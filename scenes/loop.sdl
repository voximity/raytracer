let segments = 16

camera {
    vw: 1920,
    vh: 1080,
}

sun {
    vector: <-0.8, -1, -0.2>,
}

for i in 0 to segments {
    let frac = div(i, segments)
    let inner = mul(frac, TAU)
    let color_channel = mul(frac, 255)

    sphere {
        position: vec(cos(inner), sin(inner), -4),
        radius: 0.3,
        material: {
            texture: solid(color(color_channel, color_channel, color_channel)),
        }
    }
}
